<div class="col-xs-3">
  <div class="row">
    <div class="col-xs-10">
      <% if @user.image_url == nil%>
        <img src="http://i.imgur.com/ixpF82Y.png" class="img-responsive img-circle">
      <% else %>
        <div class="product_img img-responsive img-circle"><%= link_to (image_tag (@user.image_url)) %></div>
      <% end %>
    </div>
  </div>
  <br>
  <div class="row">
    <h3><%=  @user.first_name %> <%=  @user.last_name %> </p>
    <h4>Date Joined: <%= @user.created_at.localtime.strftime("%B #{@user.created_at.day.ordinalize}, %Y") %> </p>
    <h4> <%=  @user.current_city %> </p>
    <br>
    <div>
      <button class="btn-info btn-primary btn-lg"> <%= link_to "Edit", edit_user_path(@user), :class=>"ruby-link" %> </button>
    </div>
  </div>
</div>

<div class="col-xs-9">
  <%  @posts.each do |t| %>
    <%= link_to "#{t.title}", "/posts/#{t.id}" %>
  <br>
  <hr>
  <% end %>
</div>
