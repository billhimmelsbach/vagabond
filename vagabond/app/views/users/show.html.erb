<div class="col-xs-3">
<p>First Name: <%=  @user.first_name %> </p>
<p>Last Name: <%=  @user.last_name %> </p>
<p>Email: <%= @user.email %> </p>
<p>Date Joined: <%= @user.created_at.localtime.strftime("%b %-d, %Y %H:%M") %> </p>
<p>Current City: <%=  @user.current_city %> </p>
<div>
<button class="btn-danger"><%= link_to "Delete", @user, method: :delete %></button>
<button class="btn-info"> <%= link_to "Edit", edit_user_path(@user) %> </button>
</div>
</div>

<div class="col-xs-9">
<%  @posts.each do |t| %>
  <%= link_to "#{t.title}", "/posts/#{t.id}" %>
<br>
<hr>
<% end %>
</div>
