<h2 style="text-align:center"><strong>New Post</strong></h2>

<div class="register">

  <%= form_for @post do |f| %>
    <div class="register-input">
      <%= f.text_field :title, placeholder: "Title" %>
    </div>
    <div class="register-input">
      <%= f.text_area :content, placeholder: "Content" %>
    </div>
    <div class="register-input">
      <%= f.image_field :image, placeholder: "Image" %>
    </div>
    <%= f.submit "Post" %>
  <% end %>

</div>
