<div class ="row">
  <div class="card card-inverse col-xs-12 show-city-img" style="background-image: url('<%=@post.city.image %>');">
    <div class="card-img-overlay">
      <h1 class="card-title city-text"><%= "#{@post.city.name}" %></h1>
      <div style="min-height:30vh">
      <% if current_user != nil %>
        <%= button_to "Back", "/cities/#{@post.city_id}",method: :get, :class=>"ruby-link btn btn-info btn-primary btn-lg inline" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
<br>

<div class= "col-xs-10 col-xs-offset-1">
  <div class="col-xs-3">
    <div class="row">
      <img src="<%= @post.user.image_url%>" class="product_img img-responsive img-circle">
    </div>
    <br>
    <div class="row">
      <h3> <%= link_to "#{@post.user.first_name} #{@post.user.last_name}", "/users/#{@post.user_id}" %></h3>
      <h4>Date Joined: <%= @post.user.created_at.localtime.strftime("%B #{@post.user.created_at.day.ordinalize}, %Y") %> </h4>
      <h4> <%=  @post.user.current_city %> </h4>
      <br>
      <div>
        <% if current_user != nil && current_user.id == @post.user.id %>
          <%= button_to "Edit Your Profile", edit_user_path(@post.user), method: :get, :class=>"ruby-link btn btn-info btn-primary btn-lg" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-xs-9">
    <div class="panel panel-default">
      <div class="panel-heading">
         <h2> <%= @post.title %> </h2>
      </div>
      <div class="row">
        <div class="panel-body">
          <div class="col-xs-8 col-xs-offset-2 post-image-container">
            <%if @post.image != ""%>
              <img src="<%= @post.image %>" class = "img-responsive img-rounded center-block" alt="post picture">
            <% end %>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <p> <%= @post.content %> </p>
        <% if current_user != nil && current_user.id == @post.user.id %>
          <br>
          <div class="row">
            <div class="pull-right">
              <div class = "button-row">
                <%= link_to "Edit Post", edit_post_path, method: :get, :class=>"ruby-link btn btn-info btn-primary btn-lg inline" %>
                <button class="ruby-link btn btn-danger inline btn-primary btn-lg inline" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                  Delete
                </button>
              </div>
            </div>
          </div>
          <div class = "row">
            <div class="collapse" id="collapseExample">
              <div class="well">
                <h3 class="inline"> Are you sure you want to delete your post? </h3>
                <div class = "row">
                  <div class="col-xs-3">
                  </div>
                  <div class= "col-xs-6">
                    <br>
                    <button class="ruby-link btn btn-danger btn-primary btn-lg inline">
                      <%= link_to "Delete Post", "/cities/#{@post.city_id}/posts/#{@post.id}" , method: :delete %>
                    </button>
                    <button class = "btn btn-success inline btn-primary btn-lg" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                      Cancel
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <br>
  </div>
</div>
