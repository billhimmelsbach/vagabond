<div class="jumbotron">
  <div class = "col-xs-6 col-xs-offset-3">
      <%= flash_messages %>
  </div>
</div>

<div class="container">
  <div class="col-xs-12">
    <div id="logbox">
      <%= form_for :post, url: update_post_path, method: :patch do |f| %>
        <h1 class="formText">Edit Post</h1>
        <%= f.text_field :title, placeholder: "Title", class: "inputForm pass" %>
        <%= f.text_area :content, placeholder: "Content", class: "inputForm pass" %>
        <%= f.text_field :image, placeholder: "Image", class: "inputForm pass" %>
        <%= f.submit "Edit", class: "inputButton" %>
      <% end %>
			</form>
    </div>
  </div>
</div>
