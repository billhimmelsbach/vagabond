
<div class="jumbotron">
  <div class = "col-xs-6 col-xs-offset-3">
      <%= flash_messages %>
  </div>
</div>

<h2 style="text-align:center"><strong>Log In</strong></h2>

<div class="register">

<%= form_for @user, url: '/sessions', method: 'post' do |f| %>
  <div>
    <strong>Email:</strong><%= f.text_field :email, placeholder: 'Email' %>
  </div>
  <div>
    <strong>Password:</strong><%= f.password_field :password, placeholder: 'Password' %>
  </div>
  <%= f.submit 'Log In' %>
<% end %>

</div>
