<div class="jumbotron">
</div>
<div class="row">
<div class = "col-xs-6 col-xs-offset-3">
  <%= flash_messages %>
</div>
</div>
<div>
<% if current_user %>
  <div class="row welcome">
    <h1>Welcome Back <%= current_user.first_name %>!</h1>
    <h2>Which city would you like to explore?</h2><br>
  </div>
<% else %>
  <div class="titleSplashPage">
    <h1 class="titleSplashPage"> Vagabond: The Destination for Travelers </h1>
    <br>
    <h4>Hello and welcome to Vagabond: a web destination for travelers!</h4>
    <h4>Share your exciting stories and helpful advice about the far-flung cities you've explored!</h4>
  </div>
  <br>
</div>
  <div class="well col-sm-10 col-sm-offset-1">
    <legend>What you'll find...</legend>
    <div class="col-sm-4 about">
      <img class="img-responsive" src="http://i.imgur.com/i9x7MGD.png" class="demo">
      <div class="col-sm-12">
        <h3>Discover</h3>
        <p>Find the in's and out's of a city you're curious about</p>
      </div>
    </div>
    <div class="col-sm-4 about">
      <img class="img-responsive" src="http://i.imgur.com/wYohZAK.png" class="demo">
      <div class="col-sm-12">
        <h3>Share</h3>
        <p>Write about your experience</p>
      </div>
    </div>
    <div class="col-sm-4 about">
      <img class="img-responsive" src="http://i.imgur.com/4OfNwAd.png" class="demo">
      <div class="col-sm-12">
        <h3>Community</h3>
        <p>Find others with common experiences</p>
      </div>
    </div>
  </div>

  <div class="row splashBtn">
    <div>
      <%= button_to "Sign Up Here", new_user_path, method: :get, :class=>"ruby-link btn btn-info btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
<br>

<div class= "col-xs-12 container-fluid">
  <% @cities.in_groups_of(3, false).each do |city_array|%>
    <div class="row city-row">
      <% city_array.each do |city| %>
        <div class="card card-inverse col-xs-4" style="background-image: url('<%=city.image %>'); background-size: cover; color:white; height: 45vh; text-align: center">
          <div class="card-img-overlay">
            <h4 class="card-title splash-city-text"><%= link_to "#{city.name}", "/cities/#{city.id}" %></h4>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <br />
</div>
