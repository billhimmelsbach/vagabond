<h1><%= @city.name %></h1>

<div class ="row">
  <div class="card card-inverse col-xs-10 show-city-img" style="background-image: url('<%=@city.image %>');">

    <div class="card-img-overlay">
      <h1 class="card-title city-text"><%= "#{@city.name}" %></h1>
      <div style="min-height:30vh">
      </div>
    </div>
  </div>
</div>
<div class ="row">

  <%= link_to "New post", "/cities/#{@city.id}/posts/new" %>

  <% @city.posts.order("created_at desc").each do |post|  %>
    <h4><%= link_to "#{post.title}", "/cities/#{post.city.id}/posts/#{post.id}" %></h4>
  <% end %>
</div>
