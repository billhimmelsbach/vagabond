<div class ="row">
  <div class="card card-inverse col-xs-12 show-city-img" style="background-image: url('<%=@city.image %>');">
    <div class="card-img-overlay">
      <h1 class="card-title city-text"><%= "#{@city.name}" %></h1>
      <div style="min-height:30vh">
        <% if current_user %>
          <%= button_to "New post", "/cities/#{@city.id}/posts/new", method: :get, :class=>"ruby-link btn btn-success btn-primary btn-lg" %>
        <% else %>
          <h2>Want to add a new post?</h2><br>
          <%= link_to "Sign up", new_user_path, :class=>"ruby-link btn btn-success btn-primary btn-lg inline" %>
          OR
          <%= link_to "Log In", new_session_path, :class=>"ruby-link btn btn-success btn-primary btn-lg inline" %>
        <% end %>
      </div>
    </div>
    <%= button_to "Back", root_path, method: :get, :class=>"ruby-link btn btn-info btn-primary btn-lg inline" %>
    <br>
  </div>
</div>
<br>

<div class= "col-xs-10 col-xs-offset-1">
  <div class ="row">
    <div class="col-xs-10 col-xs-offset-1">
      <% @city.posts.order("created_at desc").each do |post| %>
      <div class = "col-xs-2">
        <img src= "<%= post.user.image_url%>" class="product_img img-responsive img-circle">
        <h5 class= "text-center"> <%= link_to "#{post.user.first_name}", "/users/#{post.user_id}" %> </h5>
      </div>
      <div class="panel panel-default col-xs-10">
        <div class="panel-heading">
           <h4><%= link_to "#{post.title}", "/cities/#{post.city.id}/posts/#{post.id}" %></h4>
        </div>
        <div class="panel-body">
          <p> <%= post.content %> </p>
        </div>
        <br>
      </div>
    <% end %>
    </div>
  </div>
</div>
